<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kfc"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/KFCTEXT"
        android:layout_width="344dp"
        android:layout_height="185dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="WELCOME     TO KFC"
        android:textColor="#D82020"
        android:textSize="60sp" />

    <Button
        android:id="@+id/apply"
        android:layout_width="193dp"
        android:layout_height="108dp"
        android:layout_alignTop="@+id/KFCTEXT"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="600dp"
        android:background="#D32F2F"
        android:fontFamily="serif"
        android:text="Applying for the job"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/rsma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/KFCTEXT"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="660dp"
        android:background="#00F6F0F0"
        android:fontFamily="serif"
        android:text="الخلفية رسمتي"
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>