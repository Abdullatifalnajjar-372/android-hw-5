<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/kfc2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/apl"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Applying For The JOB"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="367dp"
        android:layout_height="228dp"
        android:layout_alignTop="@+id/apl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:text="Thank you for choosing KFC retuarants. We appreciate your interest about working with us. Please  press NEXT to read the requirements,"
        android:textColor="#070000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="229dp"
        android:background="#00FFFFFF"
        android:text="شكرا لاختيارك شركة مطاعم كنتاكي . نحن نقدر اهتمامك للعمل معنا. الرجاء الضغط على زر NEXT لقراءة متطلبات الوظيفة ."
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="155dp"
        android:layout_height="77dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginTop="202dp"
        android:background="#FFFFFF"
        android:text="NEXT"
        android:textColor="#D32F2F"
        android:textColorHighlight="#FFFFFF"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>